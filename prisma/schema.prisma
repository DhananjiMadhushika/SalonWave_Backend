generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


enum Role {
  ADMIN
  BRANCH_ADMIN
  CASHIER
  USER
}



model User {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  password String
  phoneNumber String
  userImage String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  role Role @default(USER)

  @@map("user")
}

model Address{
  id Int @id @default(autoincrement())
  lineOne String
  lineTwo String?
  city String
  country String
  pinCode String
  userId Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("addresses")
}

model Branch {
  id Int @id @default(autoincrement())
  name String
  phoneNumber String
  address String?
}

model Product {
  id Int @id @default(autoincrement())
  name String
  productImage String
  price Decimal
  salesStock Int
  usageStock Int
  exDate DateTime

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ProductCategory{
  id Int @id @default(autoincrement())
  name String
}

model Services{
  id Int @id @default(autoincrement())
  name String
  serviceImage String
  duration String
  price Decimal
}

model ServicesCategory{
  id Int @id @default(autoincrement())
  name String
}